//-----------------------------------------------------------------
// 名称: LED模拟交通灯
//-----------------------------------------------------------------
// 说明: 东西向绿灯亮若干秒后,黄灯闪烁,闪烁5次后亮红灯,
//		红灯亮后,南北向由红灯变为绿灯,若干秒后南北向黄灯闪烁,
//		闪烁5次后亮红灯,东西向绿灯亮,如此往复.
//		本例将时间设得较短是为了调试的时候能较快的观察到运行效果.
//
//-----------------------------------------------------------------
#define	RED_A		2	//东西向指示灯
#define	YELLOW_A	3
#define	GREEN_A	 	4
#define	RED_B		5	//南北向指示灯
#define	YELLOW_B	6
#define	GREEN_B		7
//-----------------------------------------------------------------
//闪烁次数及操作类型变量定义
uint8_t Flash_Count = 0, Operation_Type = 1;
uint8_t YELLOW_State = HIGH;
//-----------------------------------------------------------------
// 初始配置
//-----------------------------------------------------------------
void setup() {

}
//-----------------------------------------------------------------
// 主循环
//-----------------------------------------------------------------
void loop() {
	switch (Operation_Type)  {
		case 1://东西向绿灯与南北向红灯亮

			break;
		case 2://东西向黄灯开始闪烁,绿灯关闭

			break;
		case 3://东西向红灯与南北向绿灯亮

			break;
		case 4://南北向黄灯开始闪烁

	}
}
